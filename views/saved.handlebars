{{!-- Saved Articles --}}
<div id="save-articles-container">
  <div id="saved-article"></div>
</div>

{{!-- Note Modal --}}
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
  aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title text-center" id="exampleModalLabel">Article Notes</h4>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <h5 class="text-center">Previous notes</h5>
      <div class="modal-body">
        <div class="modal-notes">

          {{!-- Previous notes --}}
        </div>
        <form id="add-note">
          {{!-- <div class="form-group">
            <label for="recipient-name" class="col-form-label">Recipient:</label>
            <input type="text" class="form-control" id="recipient-name">
          </div> --}}

          <div class="form-group">
            <label for="message-text" class="col-form-label">Add note:</label>
            <div id="user-message-modal"></div>
            <textarea class="form-control" id="message-text"></textarea>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-submit btn-secondary" data-dismiss="modal">Save Note</button>
      </div>
    </div>
  </div>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script type="text/javascript" src="js/save.js"></script>
